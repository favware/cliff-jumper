{
  "name": "@favware/cliff-jumper",
  "version": "2.0.0",
  "description": "A small CLI tool to create a semantic release and git-cliff powered Changelog",
  "workspaces": [
    "conventional-changelog-angular-custom"
  ],
  "author": "@favware",
  "license": "MIT",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "cj": "./dist/cli.js",
    "cliff-jumper": "./dist/cli.js"
  },
  "imports": {
    "#commands/*": "./dist/commands/*.js",
    "#lib/*": "./dist/lib/*.js",
    "#root/*": "./dist/*.js"
  },
  "sideEffects": "false",
  "files": [
    "dist/**/*.js"
  ],
  "scripts": {
    "debug": "node . --first-release --verbose --dry-run",
    "start": "node . --dry-run",
    "lint": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "update": "yarn upgrade-interactive",
    "clean": "node scripts/clean.mjs",
    "build": "tsc -b src",
    "watch": "tsc -b src -w",
    "bump": "yarn build && yarn workspace:prepack && node . && yarn workspace:postpack",
    "check-update": "yarn build && yarn workspace:prepack && node . --dry-run && yarn workspace:postpack",
    "prepack": "pinst --disable",
    "postinstall": "husky install .github/husky",
    "postpack": "pinst --enable",
    "workspace:prepack": "yarn workspace @favware/conventional-changelog-angular run prepack",
    "workspace:postpack": "yarn workspace @favware/conventional-changelog-angular run postpack"
  },
  "dependencies": {
    "@favware/conventional-changelog-angular": "workspace:^",
    "@sapphire/result": "^2.6.1",
    "@sapphire/utilities": "3.11.1",
    "colorette": "^2.0.19",
    "commander": "^10.0.1",
    "conventional-recommended-bump": "^6.1.0",
    "git-cliff": "^1.1.2",
    "js-yaml": "^4.1.0",
    "semver": "^7.4.0",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@sapphire/eslint-config": "^4.4.1",
    "@sapphire/prettier-config": "^1.4.5",
    "@sapphire/ts-config": "^4.0.0",
    "@types/conventional-recommended-bump": "^6.1.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.15.11",
    "@types/semver": "^7.3.13",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "pinst": "^3.0.0",
    "prettier": "^2.8.7",
    "pretty-quick": "^3.1.3",
    "ts-node": "^10.9.1"
  },
  "resolutions": {
    "acorn": "^8.8.2",
    "ansi-regex": "^5.0.1",
    "minimist": "^1.2.8"
  },
  "engines": {
    "node": ">=v16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/favware/cliff-jumper.git"
  },
  "bugs": {
    "url": "https://github.com/favware/cliff-jumper/issues"
  },
  "homepage": "https://github.com/favware/cliff-jumper",
  "keywords": [
    "git-cliff",
    "favware",
    "cli",
    "generator",
    "changelog",
    "semver",
    "commit",
    "conventional-changelog",
    "keepachangelog",
    "changelog-generator",
    "conventional-commits"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": "@sapphire"
  },
  "packageManager": "yarn@3.5.0"
}
